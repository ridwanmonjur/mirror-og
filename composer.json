{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "fakerphp/faker": "^1.24",
        "filament/filament": "^3.2",
        "google/cloud-firestore": "^1.48",
        "guzzlehttp/guzzle": "^7.2",
        "io238/laravel-iso-countries": "^1.2",
        "kreait/laravel-firebase": "^5.10",
        "laravel/framework": "^10.10",
        "laravel/pulse": "^1.2",
        "laravel/socialite": "^5.9",
        "laravel/tinker": "^2.8",
        "livewire/livewire": "^3.5",
        "opcodesio/log-viewer": "^3.11",
        "paragonie/sodium_compat": "^2.1",
        "predis/predis": "^2.2",
        "socialiteproviders/google": "^4.1",
        "socialiteproviders/steam": "^4.2",
        "spatie/laravel-feed": "^4.4",
        "spatie/laravel-googletagmanager": "^2.7",
        "spatie/laravel-sitemap": "^7.3",
        "stripe/stripe-php": "^13.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.9",
        "beyondcode/laravel-query-detector": "^2.0",
        "doctrine/dbal": "^3.6",
        "larastan/larastan": "^2.0",
        "laravel-shift/blueprint": "^2.12",
        "laravel/dusk": "^8.2",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "laravel/ui": "^4.2",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/phpinsights": "^2.11",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0",
        "thedoctor0/laravel-factory-generator": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/bladeHelpers.php",
            "app/Helpers/utils.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [],
        "pint": "./vendor/bin/pint",
        "stan": "./vendor/bin/phpstan analyse --memory-limit=2G",
        "pint:fix": "./vendor/bin/pint",
        "insights": "php artisan insights",
        "insights:fix": "php artisan insights --fix",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "docker:partial": "docker compose -f docker-compose.partial.dev.yml up",
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "dev:clear": [
            "php artisan clear-compiled",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan view:clear",
            "php artisan event:clear",
            "php artisan optimize:clear",
            "rm -rf bootstrap/cache/*.php",
            "php artisan migrate"
        ],
        "local": [
            "rm -f .env",
            "cp .env.example .env",
            "composer update",
            "npm run build",
            "chmod +x dev.sh stop.sh"
        ],
        "npm-build": [
            "npm install",
            "npm run build",
            "rm -rf node_modules"
        ],
        "build": [
            "rm -rf node_modules",
            "rm -rf vendor",
            "rm -f .env",
            "cp .env.prod .env",
            "composer2 install --no-dev --optimize-autoloader",
            "php artisan migrate",
            "npm ci",
            "npm run build",
            "rm -rf node_modules",
                        

            "php artisan clear-compiled",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan view:clear",
            "php artisan event:clear",
            "php artisan optimize:clear",
            "rm -rf bootstrap/cache/*.php",
            
            "# Generate all types of cache",
            "php artisan config:cache",
            "php artisan route:cache",
            "php artisan view:cache",
            "php artisan event:cache",
            "php artisan optimize",
            "composer dump-autoload -o"

        ],
        "staging": [
            "rm -rf node_modules",
            "rm -rf vendor",
            "rm -f .env",
            "cp .env.staging .env",
            "composer2 install --no-dev --optimize-autoloader",
            "php artisan migrate",
            "npm ci",
            "npm run build",
            "rm -rf node_modules"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
