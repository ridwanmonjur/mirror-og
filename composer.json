{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^3.10",
        "fakerphp/faker": "^1.24",
        "filament/filament": "^3.2",
        "google/apiclient": "^2.18",
        "guzzlehttp/guzzle": "^7.2",
        "io238/laravel-iso-countries": "^1.2",
        "laravel/framework": "^10.10",
        "laravel/pulse": "^1.2",
        "laravel/socialite": "^5.9",
        "laravel/tinker": "^2.8",
        "laravel/ui": "^4.6",
        "livewire/livewire": "^3.5",
        "opcodesio/log-viewer": "^3.19",
        "openspout/openspout": "^4.28.0 <4.29.0",
        "paragonie/sodium_compat": "^2.1",
        "socialiteproviders/google": "^4.1",
        "spatie/laravel-feed": "^4.4",
        "spatie/laravel-googletagmanager": "*",
        "spatie/laravel-sitemap": "^7.3",
        "stripe/stripe-php": "^13.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.9",
        "beyondcode/laravel-query-detector": "^2.0",
        "doctrine/dbal": "^3.6",
        "larastan/larastan": "^2.0",
        "laravel-shift/blueprint": "^2.12",
        "laravel/dusk": "^8.2",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "laravel/ui": "^4.2",
        "mockery/mockery": "^1.4.4",
        "nextbuild/database-viewer": "^1.0",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/phpinsights": "^2.11",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0",
        "thedoctor0/laravel-factory-generator": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/bladeHelpers.php",
            "app/Helpers/utils.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [],
        "pint": "./vendor/bin/pint",
        "stan": "./vendor/bin/phpstan analyse --memory-limit=2G",
        "pint:fix": "./vendor/bin/pint",
        "insights": "php artisan insights",
        "insights:fix": "php artisan insights --fix",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "docker:partial": "docker compose -f docker-compose.partial.dev.yml up",
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "env" : [
            "rm -f .env",
            "cp .env.prod .env"
        ],
        "env:staging" : [
            "rm -f .env",
            "cp .env.staging .env"
        ],
        "dev:clear": [
            "php artisan clear-compiled",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan view:clear",
            "php artisan event:clear",
            "php artisan optimize:clear",
            "rm -rf bootstrap/cache/*.php",
            "php artisan migrate"
        ],
        "local": [
            "rm -f .env",
            "cp .env.example .env",
            "@REM composer update",
            "npm run build",
            "chmod +x dev.sh stop.sh"
        ],
        "npm-build": [
            "npm install",
            "npm run build",
            "rm -rf node_modules"
        ],
        "cache:test": [
            "php artisan cache:performance-test --range=1-20 --save"
        ],
        "build": [
            "rm -rf node_modules",
            "rm -rf vendor",
          
            "composer2 install --no-dev --optimize-autoloader",
            "php artisan migrate",
            "npm ci",
            "npm run build",
            "rm -rf node_modules",
                        
            "rm -rf storage/framework/cache/data/*",
            "rm -rf storage/framework/sessions/*",
            "rm -rf storage/framework/views/*",            
            "php artisan clear-compiled",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan view:clear",
            "php artisan event:clear",
            "php artisan optimize:clear",
            "rm -rf bootstrap/cache/*.php",
            
            "# Generate all types of cache",
            "php artisan config:cache",
            "php artisan route:cache",
            "php artisan view:cache",
            "php artisan event:cache",
            "php artisan optimize",
            "composer2 dump-autoload -o --classmap-authoritative"

        ],
        "staging": [
            "rm -rf node_modules",
            "rm -rf vendor",
            "rm -f .env",
            "cp .env.staging .env",
            "composer2 install --no-dev --optimize-autoloader",
            "php artisan migrate",
            "npm ci",
            "npm run build",
            "rm -rf node_modules"
        ],


        "tf:dev:plan": [
            "bash -c 'cd terraform && source scripts/load-env.sh dev && terraform plan -var-file=\"dev.tfvars\" -out=\"dev.tfplan\"'"
        ],
        
        "tf:dev2:plan": [
            "bash -c 'cd terraform && source scripts/load-env.sh dev && terraform plan -var-file=\"dev.tfvars\" -target=google_recaptcha_enterprise_key.driftwood_recaptcha -target=google_firebase_app_check_recaptcha_enterprise_config.driftwood_app_check -target=null_resource.update_env_files -out=\"dev2.tfplan\"'"
        ],
        

        "tf:staging:plan": [
            "bash -c 'cd terraform && source scripts/load-env.sh staging && terraform plan -var-file=\"staging.tfvars\" -out=\"staging.tfplan\"'"
        ],
        
        "tf:staging2:plan": [
            "bash -c 'cd terraform && source scripts/load-env.sh staging && terraform plan -var-file=\"staging.tfvars\" -target=google_recaptcha_enterprise_key.driftwood_recaptcha -target=google_firebase_app_check_recaptcha_enterprise_config.driftwood_app_check -target=null_resource.update_env_files -out=\"staging2.tfplan\"'"
        ],
       
        "tf:prod:plan": [
            "bash -c 'cd terraform && source scripts/load-env.sh prod && terraform plan -var-file=\"prod.tfvars\" -out=\"prod.tfplan\"'"
        ],
        
        "tf:prod2:plan": [
            "bash -c 'cd terraform && source scripts/load-env.sh prod && terraform plan -var-file=\"prod.tfvars\" -target=google_recaptcha_enterprise_key.driftwood_recaptcha -target=google_firebase_app_check_recaptcha_enterprise_config.driftwood_app_check -target=null_resource.update_env_files -out=\"prod2.tfplan\"'"
        ],

     
        "tf:dev:apply": [
            "bash -c 'cd terraform && source scripts/load-env.sh dev && terraform apply dev.tfplan'"
        ],
        
        "tf:dev2:apply": [
            "bash -c 'cd terraform && source scripts/load-env.sh dev && terraform apply dev2.tfplan'"
        ],
    
      
        "tf:staging:apply": [
            "bash -c 'cd terraform && source scripts/load-env.sh staging && terraform apply staging.tfplan'"
        ],
        
        "tf:staging2:apply": [
            "bash -c 'cd terraform && source scripts/load-env.sh staging && terraform apply staging2.tfplan'"
        ],

        "tf:prod:apply": [
            "bash -c 'cd terraform && source scripts/load-env.sh prod && terraform apply prod.tfplan'"
        ],
        
        "tf:prod2:apply": [
            "bash -c 'cd terraform && source scripts/load-env.sh prod && terraform apply prod2.tfplan'"
        ],
     
       
       
        
        "tf:dev:destroy": [
            "bash -c 'cd terraform && source scripts/load-env.sh dev && terraform destroy -var-file=\"dev.tfvars\" -auto-approve'"
        ],
        "tf:staging:destroy": [
            "bash -c 'cd terraform && source scripts/load-env.sh staging && terraform apply -var-file=\"staging.tfvars\" -target=null_resource.disable_firestore_delete_protection'",
            "bash -c 'cd terraform && source scripts/load-env.sh staging && terraform destroy -var-file=\"staging.tfvars\" -auto-approve'"
        ],
        "tf:prod:destroy": [
            "bash -c 'cd terraform && source scripts/load-env.sh prod && terraform destroy -var-file=\"prod.tfvars\" -auto-approve'"
        ],
        "tf:validate": [
            "cd terraform && terraform validate"
        ],
        "tf:init": [
            "cd terraform && terraform init"
        ],
       
        
        "tf:destroy:all": [
            "echo 'Removing all Terraform state files...'",
            "rm -f terraform/.terraform/terraform.tfstate",
            "rm -f terraform/terraform.tfstate*",
            "rm -f terraform/dev.tfplan",
            "rm -f terraform/staging.tfplan", 
            "rm -f terraform/prod.tfplan",
            "rm -rf terraform/.terraform/",
            "echo 'All Terraform state files removed successfully.'"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
