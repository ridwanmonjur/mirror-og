{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "filament/filament": "^2.0",
        "guzzlehttp/guzzle": "^7.2",
        "io238/laravel-iso-countries": "^1.2",
        "laravel/framework": "^10.10",
        "laravel/socialite": "^5.9",
        "laravel/tinker": "^2.8",
        "predis/predis": "^2.2",
        "sendgrid/sendgrid": "~7",
        "socialiteproviders/google": "^4.1",
        "socialiteproviders/steam": "^4.2",
        "spatie/laravel-schedule-monitor": "^3.7",
        "stripe/stripe-php": "^13.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.9",
        "codeception/codeception": "^5.1",
        "codeception/module-asserts": "^3.0",
        "codeception/module-laravel": "^3.1",
        "codeception/module-phpbrowser": "*",
        "codeception/module-rest": "^3.3",
        "codeception/module-webdriver": "^4.0",
        "doctrine/dbal": "^3.6",
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "laravel/ui": "^4.2",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/bladeHelpers.php",
            "app/Helpers/utils.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "chgrp -R www-data storage bootstrap/cache",
            "chmod -R ug+rwx storage bootstrap/cache"
        ],
        "pint": "./vendor/bin/pint",
        "pint:test": "./vendor/bin/pint",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "docker:partial" : "docker compose -f docker-compose.partial.dev.yml up",
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan filament:upgrade"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
